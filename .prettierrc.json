{
	"tabWidth": 2,
	"semi": false,
	"useTabs": true,
	"endOfLine": "lf",
	"printWidth": 90,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"bracketSpacing": true,
	"bracketSameLine": true,
	"trailingComma": "none",
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"^(next/(.*)$)|^(next$)",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^types$",
		"^@/types/(.*)$",
		"^@/context/(.*)$",
		"^@/environment/(.*)$",
		"^@/config/(.*)$",
		"^@/libs/(.*)$",
		"^@/hooks/(.*)$",
		"^@/components/(.*)$",
		"^@/shared/ui/(.*)$",
		"^@/shared/components/(.*)$",
		"^@/styles/(.*)$",
		"^@/app/(.*)$",
		"",
		"^[./]"
	],
	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"plugins": ["prettier-plugin-tailwindcss", "@ianvs/prettier-plugin-sort-imports"]
}
