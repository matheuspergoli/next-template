		"@types/zxcvbn": "^4.4.5",
		"drizzle-kit": "^0.28.0",
		"eslint": "^8.57.0",
		"eslint-config-next": "15.0.2",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
