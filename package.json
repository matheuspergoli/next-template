{
	"name": "next-template",
	"version": "4.0.0",
	"private": true,
	"author": "Matheus Pergoli",
	"description": "Next.js 15 template made by Matheus Pergoli",
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"format": "prettier --write \"src/**/*.{ts,tsx}\"",
